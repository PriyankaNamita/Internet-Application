@model IEnumerable<HealthCare.Models.Doctor>

@{
    ViewBag.Title = "ViewDoc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Doctors</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Specialization)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Specialization)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.ActionLink("Book Appointment", "BookAppointment", new { id = item.ID }) |
            @Html.ActionLink("View Reviews", "ViewReview", new { id = item.ID }) |
            @Html.ActionLink("Write Review", "WriteReview", new { id = item.ID }) |

        </td>
    </tr>
}

</table>
