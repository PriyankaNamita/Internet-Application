@model IEnumerable<HealthCare.Models.Appointment>

@{
    ViewBag.Title = "Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Your Appointments</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerID)
        </th>
        <th>
            @Html.DisplayName("Doctor Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OnDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Doctor.Name)
        </td>
        <td>
            <p>@item.OnDate.ToShortDateString()</p>
        </td>
        <td>
            @Html.ActionLink("Prescription", "Prescription", new { id = item.ID }) |
        </td>

    </tr>
}

</table>
