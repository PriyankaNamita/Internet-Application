@model IEnumerable<HealthCare.Models.Appointment>

@{
    ViewBag.Title = "Appointment";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}

<h2 class="text-info">Appointment</h2>

<table class="table">
    <tr class="text-danger">
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayName("Customer Name")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OnDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Name)
        </td>
        <td>
            <p>@item.OnDate.ToShortDateString()</p>
        </td>
        <td>
            @Html.ActionLink("Give Prescription", "Prescription", new { id = item.ID }) 
            


        </td>
    </tr>
}

</table>
